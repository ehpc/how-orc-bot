FROM rust:1.91 AS base

WORKDIR /app

RUN curl -L --proto '=https' --tlsv1.2 -sSf https://raw.githubusercontent.com/cargo-bins/cargo-binstall/main/install-from-binstall-release.sh | bash

FROM base AS tools

RUN cargo binstall cargo-chef sccache --locked

FROM tools AS planner

COPY . .

RUN cargo chef prepare --recipe-path recipe.json

FROM tools AS builder

ENV RUSTC_WRAPPER=sccache \
    SCCACHE_DIR=/sccache

COPY --from=planner /app/recipe.json recipe.json

RUN --mount=type=cache,target=/usr/local/cargo/registry,sharing=locked \
    --mount=type=cache,target=/usr/local/cargo/git,sharing=locked \
    --mount=type=cache,target=$SCCACHE_DIR,sharing=locked \
    cargo chef cook --recipe-path recipe.json

COPY . .

RUN --mount=type=cache,target=/usr/local/cargo/registry,sharing=locked \
    --mount=type=cache,target=/usr/local/cargo/git,sharing=locked \
    --mount=type=cache,target=$SCCACHE_DIR,sharing=locked \
    cargo build --bin how-orc-bot

FROM debian:bookworm-slim AS runtime-base

RUN apt-get update && apt-get install -y libssl3

FROM runtime-base AS runtime

RUN groupadd -g 1001 appgroup && \
    useradd -u 1001 -g appgroup -m -d /home/appuser -s /bin/bash appuser

COPY --from=builder --chown=appuser:appgroup /app/target/debug/how-orc-bot /usr/local/bin/how-orc-bot

USER appuser

ENTRYPOINT ["/usr/local/bin/how-orc-bot"]